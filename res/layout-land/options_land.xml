<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical">
    <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="New Image"
            android:id="@+id/bNewImage" android:layout_gravity="center" android:layout_marginTop="10dp"
            android:longClickable="false" android:focusableInTouchMode="false" android:layout_alignParentTop="true"
            android:layout_centerInParent="true"/>
    <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Save Image"
            android:id="@+id/bSaveImage" android:layout_gravity="center" android:clickable="true"
            android:longClickable="false" android:layout_alignTop="@+id/bNewImage" android:layout_marginTop="45dp"
            android:layout_centerInParent="true"/>
    <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Load Image"
            android:id="@+id/bLoadImage" android:layout_gravity="center" android:layout_alignTop="@+id/bSaveImage"
            android:layout_marginTop="45dp" android:layout_centerInParent="true"/>
    <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Take a camera shot"
            android:id="@+id/bCameraShot" android:layout_gravity="center" android:layout_alignTop="@+id/bLoadImage"
            android:layout_marginTop="45dp" android:layout_centerInParent="true"/>
    <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Share"
            android:id="@+id/bShare" android:layout_gravity="center" android:layout_alignTop="@+id/bCameraShot"
            android:layout_marginTop="45dp" android:layout_centerInParent="true"/>
    <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Back"
            android:id="@+id/bBack" android:layout_gravity="center_vertical|left"
            android:layout_alignParentBottom="true"/>
</RelativeLayout>

