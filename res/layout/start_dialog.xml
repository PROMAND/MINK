<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/startLayout">

    <ImageButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:id="@+id/newButton"
            android:layout_gravity="left|center_vertical"
            android:src="@drawable/new_file"
            android:layout_alignParentLeft="true" android:layout_marginLeft="17dp"
            android:layout_alignParentTop="true"/>
    <ImageButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:id="@+id/loadButton"
            android:layout_gravity="left|center_vertical"
            android:src="@drawable/open_file"
            android:layout_alignParentLeft="true" android:layout_marginLeft="116dp"
            android:layout_alignTop="@+id/newButton"/>
    <ImageButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:id="@+id/takeAPhotoButton"
            android:layout_gravity="left|center_vertical"
            android:src="@drawable/take_a_photo"
            android:layout_alignParentLeft="true" android:layout_marginLeft="210dp"
            android:layout_alignTop="@+id/newButton"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/exit"
            android:id="@+id/exitB" android:layout_alignLeft="@+id/newButton" android:layout_below="@+id/newButton"
            android:layout_alignRight="@+id/takeAPhotoButton"
            />


</RelativeLayout>