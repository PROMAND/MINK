<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >
    <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="New Image"
            android:id="@+id/bNewImage" android:layout_gravity="center" android:layout_marginTop="40dp"
            android:longClickable="false" android:focusableInTouchMode="false"/>
    <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Save Image"
            android:id="@+id/bSaveImage" android:layout_gravity="center" android:clickable="true"
            android:longClickable="false"/>
    <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Load Image"
            android:id="@+id/bLoadImage" android:layout_gravity="center"/>
    <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Take a camera shot"
            android:id="@+id/bCameraShot" android:layout_gravity="center"/>
    <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Share"
            android:id="@+id/bShare" android:layout_gravity="center"/>
    <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Back"
            android:id="@+id/bBack" android:layout_gravity="center_horizontal" android:layout_marginTop="30dp"/>
</LinearLayout>

